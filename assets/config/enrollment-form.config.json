        {
          "type": "required",
          "message": "Name is required"
        },
        {
          "type": "minLength",
          "value": 2,
          "message": "Name must be at least 2 characters"
        }
      ]
    },
    {
      "key": "age",
      "label": "Age",
      "type": "number",
      "placeholder": "Enter your age",
      "validations": [
        {
          "type": "required",
          "message": "Age is required"
        },
        {
